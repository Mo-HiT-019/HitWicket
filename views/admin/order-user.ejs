<%- include('../partials/admin-header') %>

<!-- admin/order-user.ejs -->

    <title>User List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        h1 {
            text-align: center;
            margin-top: 20px;
        }
        table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }
        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        tr:hover {
            background-color: #f5f5f5;
        }
        .alert {
            margin-top: 20px;
            padding: 15px;
            background-color: #f44336;
            color: white;
            text-align: center;
        }
        .btn {
            padding: 8px 12px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            margin-right: 5px;
        }
        .btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1>User List</h1>
    
    <% if (users.length > 0) { %>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
                <!-- Add more table headers as needed -->
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td><a class="btn" href="/admin/orders/<%= user._id %>">View Orders</a></td>
                <!-- Add more table cells as needed -->
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <p class="alert">No users found.</p>
    <% } %>

  
</body>
</html>
