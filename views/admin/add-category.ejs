<%- include('../partials/admin-header') %>

    <section>


        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Add Category</h2>
                    <form action="/product/add-category" method="POST" onsubmit="return validateForm()">
                        <label for="name">Category Name</label>
                        <input type="text" name="name" class="form-control" required>
                        <button type="submit" class="btn btn-success mt-4">Add Category</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script>
        function validateForm() {
            const name = document.forms[0].name.value.trim();
            if (!name) {
                alert("Category name must be filled out.");
                return false;
            }
            return true;
        }
    </script>