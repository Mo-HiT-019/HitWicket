
<%- include('../partials/admin-header') %>

<section class="admin-dashboard">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="mb-4 text-second fw-bold">Admin Dashboard</h3>
                <!-- Order statistics section -->
                <div class="order-stats mb-4">
                    <div class="card bg-primary text-white mb-3" style="max-width: 18rem;">
                        <div class="card-header">Total Orders</div>
                        <div class="card-body">
                            <h5 class="card-title"><%= totalOrders %></h5>
                        </div>
                    </div>
                    <div class="card bg-success text-white mb-3" style="max-width: 18rem;">
                        <div class="card-header">Total Revenue</div>
                        <div class="card-body">
                            <h5 class="card-title">Rs. <%= totalRevenue %></h5>
                        </div>
                    </div>
                    <!-- Add more cards for other statistics -->
                </div>

                <!-- Filter orders section -->
                <div class="filter-orders mb-4">
                    <h3>Filter Orders</h3>
                    <form action="" method="GET">
                        <div class="form-group">
                            <label for="month">Month:</label>
                            <select name="month" id="month" class="form-control">
                                <!-- Options for selecting month -->
                                <!-- Populate dynamically based on your requirements -->
                                <!-- Example options: -->
                                <option value="1">January</option>
                                <option value="2">February</option>
                                <option value="3">March</option>
                                <option value="4">April</option>
                                <option value="5">May</option>
                                <option value="6">June</option>
                                <option value="7">July</option>
                                <option value="8">August</option>
                                <option value="9">September</option>
                                <option value="10">October</option>
                                <option value="11">November</option>
                                <option value="12">December</option>
                                <!-- Add more options for other months -->
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="year">Year:</label>
                            <select name="year" id="year" class="form-control">
                                <!-- Options for selecting year -->
                                <!-- This year -->
                                <option value="<%= new Date().getFullYear() %>"><%= new Date().getFullYear() %></option>
                                <!-- Last year -->
                                <option value="<%= new Date().getFullYear() - 1 %>"><%= new Date().getFullYear() - 1 %></option>
                                <!-- Add more options for other years if needed -->
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </form>
                </div>

                <!-- Display filtered orders -->
                <div class="filtered-orders">
                    <div class="total-orders mb-4">
                        <div class="card bg-info text-white mb-3" style="max-width: 18rem;">
                            <div class="card-header">
                                Total Number Of Orders
                            </div>
                            <div class="card-body">
                                Total Orders: <%= filteredOrdersCount %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
