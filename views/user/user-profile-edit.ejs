<%- include('../partials/user-header') %>

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">

                <div class="container"style="margin-top:8%">
                    <h1>Edit User</h1>
                    <form action="/user-profile-edit/<%=user._id%>" method="post">
                        <div class="form-group">
                            <label for="username">Full Name</label>
                            <input type="text" class="form-control" id="username" name="name"value="<%=user.name%>" required>
                        </div>
                        <div class="form-group">
                            <label for="email">email</label>
                            <input type="email" class="form-control" id="email" name="email"value="<%=user.email%>"required>
                        </div>
                        
                        <div class="form-group">
                            <label for="password">Number.</label>
                            <input type="text" class="form-control"style="font-size:bold" id="username" name="number"value="<%=user.number%>" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Passoword</label>
                            <input type="text" class="form-control"style="font-size:bold" id="username" name="password"value="<%=user.password%>" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Edit User</button>
                    </form>
                </div>
        </div>
    </div>


</section>