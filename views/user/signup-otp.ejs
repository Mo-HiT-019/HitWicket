<%- include('../partials/user-header') %>


<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-6 col-md-6 form-container">
				<div class="col-lg-8 col-md-12 col-sm-9 col-xs-12 form-box text-center">
					<div class="logo mt-5 mb-3">
						
					</div>
					<div class="heading mb-3">
						<h4>Verify the OTP</h4>
					</div>
					<form action="/match-otp" method="post">

                        <!-- Hidden input for email -->
                        <input type="hidden" name="email" value="<%= email %>">
						<div class="form-input">
							<span><i class="fa fa-envelope"></i></span>
							<input type="text" id="otp" name="otp" placeholder="Enter the OTP" required="">
						</div>
                        
						
						<div class="row mb-3">
							<div class="col-6 d-flex">
								
							</div>
							
						</div>
						<div class="text-left mb-3">
							<button type="submit" class="btn">Verify</button>
						</div>

                        <!-- Countdown Timer -->
                        <div id="countdown"></div>
						
						<div class="row mb-3">

						</div>
						<div class="text-white">Didn't recieve the otp?
							<a href="/resend-otp" class="register-link">Resend OTP</a>
						</div>
					</form>
				</div>
			</div>

			<div class="col-lg-6 col-md-6 d-none d-md-block image-container"></div>
		</div>
	</div>


    <script>
        // Get the remaining time from the server
        let remainingTime = <%= remainingTime %>;
    
        // Function to update the countdown
        function updateCountdown() {
          const countdownElement = document.getElementById('countdown');
          if (remainingTime > 0) {
            const minutes = Math.floor(remainingTime / (1000 * 60));
            const seconds = Math.floor((remainingTime % (1000 * 60)) / 1000);
            countdownElement.textContent = `Time remaining: ${minutes}m ${seconds}s`;
            remainingTime -= 1000; // Update remaining time every second
          } else {
            countdownElement.textContent = 'OTP expired'; // Display message when OTP expires
            clearInterval(timer); // Stop the timer when the OTP expires
          }
        }
    
        // Call the updateCountdown function initially
        updateCountdown();
    
        // Update countdown every second
        const timer = setInterval(updateCountdown, 1000);
      </script>
</body>

